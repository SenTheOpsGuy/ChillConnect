# ChillConnect Backend - Production Environment
# Copy this to .env and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://chillconnect:your_db_password@localhost:5432/chillconnect_prod"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="production"

# AWS Configuration (Configure via AWS CLI or environment variables)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# AWS S3 Configuration
S3_BUCKET_NAME="chillconnect-uploads-prod"
S3_REGION="us-east-1"

# AWS SES Configuration (Email Service)
SES_REGION="us-east-1"
FROM_EMAIL="noreply@yourdomain.com"
SES_VERIFIED_DOMAIN="yourdomain.com"

# AWS SNS Configuration (SMS Service)
SNS_REGION="us-east-1"
SNS_SMS_TYPE="Transactional"

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# PayPal Configuration (Update for production)
PAYPAL_MODE="live"
PAYPAL_CLIENT_ID="your-paypal-live-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-live-client-secret"

# Alternative SMS Provider (Optional)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Token System Configuration
TOKEN_VALUE_INR=100
MIN_TOKEN_PURCHASE=10

# Frontend URL (Update with your domain)
FRONTEND_URL="https://yourdomain.com"

# Admin Configuration
SUPER_ADMIN_EMAIL="admin@yourdomain.com"
SUPER_ADMIN_PASSWORD="YourSecureAdminPassword123!"