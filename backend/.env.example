# Database
DATABASE_URL="postgresql://username:password@localhost:5432/chillconnect"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="development"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# AWS S3
S3_BUCKET_NAME="chillconnect-uploads"
S3_REGION="us-east-1"

# AWS SES (Email)
SES_REGION="us-east-1"
FROM_EMAIL="noreply@chillconnect.com"

# AWS SNS (SMS)
SNS_REGION="us-east-1"

# PayPal Configuration
PAYPAL_MODE="sandbox" # or "live" for production
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"

# Twilio (Alternative SMS provider)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Token System
TOKEN_VALUE_INR=100 # 1 token = 100 INR
MIN_TOKEN_PURCHASE=10

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Admin Configuration
SUPER_ADMIN_EMAIL="admin@chillconnect.com"
SUPER_ADMIN_PASSWORD="SuperSecurePassword123!"