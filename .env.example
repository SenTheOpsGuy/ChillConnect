# ChillConnect Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
NODE_ENV=development

# ==============================================================================
# DATABASE
# ==============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/chillconnect

# ==============================================================================
# JWT AUTHENTICATION
# ==============================================================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# ==============================================================================
# ADMIN CONFIGURATION
# ==============================================================================
ADMIN_CHANGE_PASSWORD=your-admin-password-for-role-changes

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
PORT=5001
FRONTEND_URL=http://localhost:3000

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# EMAIL SERVICE (BREVO)
# ==============================================================================
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@chillconnect.com
BREVO_SENDER_NAME=ChillConnect

# ==============================================================================
# SMS SERVICE (TWILIO)
# ==============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================================================
# PAYMENT SERVICE (PAYPAL)
# ==============================================================================
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ==============================================================================
# AWS SERVICES
# ==============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ==============================================================================
# REDIS (OPTIONAL - FOR CACHING)
# ==============================================================================
REDIS_URL=redis://localhost:6379

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=info
LOG_FILE=logs/chillconnect.log

# ==============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ==============================================================================
VITE_API_BASE_URL=http://localhost:5001/api
VITE_SOCKET_URL=http://localhost:5001
VITE_NODE_ENV=development

# ==============================================================================
# CLERK AUTHENTICATION (ALTERNATIVE)
# ==============================================================================
VITE_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key

# ==============================================================================
# MONITORING & ANALYTICS
# ==============================================================================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# ==============================================================================
# DEPLOYMENT CONFIGURATION
# ==============================================================================
NETLIFY_AUTH_TOKEN=your-netlify-auth-token
NETLIFY_SITE_ID=your-netlify-site-id
RAILWAY_TOKEN=your-railway-token