{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && npm install && npx prisma generate || echo 'Prisma generate failed, will use runtime client'"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd backend && npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "chillconnect-backend",
      "plan": "starter"
    }
  ]
}
