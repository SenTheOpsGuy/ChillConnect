{
  "name": "chillconnect",
  "version": "1.0.0",
  "description": "Token-based adult services booking platform with escrow system",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:ui": "node test-ui-flows.js",
    "test:ui:fix": "node test-ui-flows.js --fix",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "db:setup": "cd backend && npm run db:migrate && npm run seed",
    "db:reset": "cd backend && npx prisma migrate reset --force && npm run seed"
  },
  "keywords": [
    "booking",
    "platform",
    "tokens",
    "escrow",
    "adult-services"
  ],
  "author": "ChillConnect Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "puppeteer": "^24.14.0",
    "socket.io": "^4.8.1"
  }
}
