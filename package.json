{
  "name": "@chillconnect/root",
  "version": "1.0.0",
  "description": "ChillConnect - Adult Services Booking Platform",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm start",
    "build": "cd backend && npm install && npx prisma generate && npx prisma migrate deploy && psql $DATABASE_URL -f create-employee-user.sql",
    "start": "cd backend && node src/index.js",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test:ci",
    "test:backend": "cd backend && npm run test:ci",
    "test:e2e": "playwright test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "if [ \"$CI\" != \"true\" ]; then husky install; fi",
    "clean": "npm run clean:frontend && npm run clean:backend && rm -rf node_modules",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:backend": "cd backend && rm -rf node_modules coverage",
    "security:check": "npm audit && cd frontend && npm audit && cd ../backend && npm audit",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-testing-library": "^7.6.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SenTheOpsGuy/ChillConnect.git"
  },
  "keywords": [
    "booking-platform",
    "adult-services",
    "token-economy",
    "real-time-chat",
    "secure-payments"
  ],
  "author": "ChillConnect Team",
  "license": "UNLICENSED"
}
