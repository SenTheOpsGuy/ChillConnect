# ChillConnect Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
VITE_API_BASE_URL=http://localhost:5001/api
VITE_SOCKET_URL=http://localhost:5001

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
VITE_NODE_ENV=development

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# Clerk Authentication (if using)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# ==============================================================================
# PAYMENT INTEGRATION
# ==============================================================================
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
VITE_ENABLE_CHAT=true
VITE_ENABLE_VIDEO_CALLS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# ==============================================================================
# MOBILE APP CONFIGURATION
# ==============================================================================
VITE_APP_NAME=ChillConnect
VITE_APP_VERSION=1.0.0
VITE_BUNDLE_ID=com.chillconnect.app

# ==============================================================================
# CAPACITOR CONFIGURATION
# ==============================================================================
VITE_CAPACITOR_APP_ID=com.chillconnect.app
VITE_CAPACITOR_APP_NAME=ChillConnect

# ==============================================================================
# MAP SERVICES (IF NEEDED)
# ==============================================================================
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==============================================================================
# DEVELOPMENT TOOLS
# ==============================================================================
VITE_ENABLE_DEV_TOOLS=true
VITE_MOCK_API=false